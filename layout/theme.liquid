  window.addEventListener('load', function() {
    var timer = setInterval(function() {
      if (document.querySelector('.site-footer__newsletter_signup .ql-editor').innerText.includes("Thanks for subscribing!")) {
        gtag('event', 'conversion', {
          'send_to': 'AW-1062281523/Bt-jCOLdrvQCELPCxPoD'
        });
        clearInterval(timer);
      }
    }, 1000);
  });

</script>
{% if template.name == 'product' %}
<script type="text/javascript">
  gtag('event', 'view_item', {
    currency: 'USD',
    'items': [{
      'item_id': '{{ product.id }}',
      'item_name': '{{ product.title | remove: "'" | remove: '"' }}',
      'item_brand': '{{ product.vendor | remove: "'" | remove: '"' }}',
      'item_category': '{{ product.collections[0].title | remove: "'" | remove: '"' }}',
      'item_variant': '{{ product.selected_variant.sku }}',
      'currency': '{{ shop.currency }}',
      'price': '{{ product.price  | times: 0.01}}'
      }]
    });
  
  window.addEventListener('DOMContentLoaded', function() {
    const addToCartButton = document.querySelector('.product-form__cart-submit')

    $(addToCartButton).on('click', function() {
        gtag('event', 'add_to_cart', {
          currency: 'USD',
          'items': [{
            'item_id': '{{ product.id }}',
            'item_name': '{{ product.title | remove: "'" | remove: '"' }}',
            'item_brand': '{{ product.vendor | remove: "'" | remove: '"' }}',
            'item_category': '{{ product.collections[0].title | remove: "'" | remove: '"' }}',
            'item_variant': '{{ product.selected_variant.sku }}',
            'currency': '{{ shop.currency }}',
            'price': '{{ product.price  | times: 0.01}}'
            }]
          });
    })
})
</script>
{% endif %}
  
