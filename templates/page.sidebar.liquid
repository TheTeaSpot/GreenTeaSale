<div class="page-width">
  <div class="grid">
    <div class="grid__item cms-page__sidebar medium-up--one-third large-up--one-quarter">
      {% section 'cms-page-sidebar' %}
    </div>
    <div class="grid__item cms-page__content medium-up--two-thirds large-up--three-quarters">
      <div class="section-header text-center">
        <h1 class="text-left">{{ page.title }}</h1>
      </div>

      <div class="rte">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>
